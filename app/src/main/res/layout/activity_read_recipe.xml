<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/back"
            android:src="@drawable/ic_baseline_navigate_before_24"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:tint="@color/text"
            tools:ignore="UseAppTint" />

        <TextView
            android:id="@+id/recipe_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Recipe Title"
            android:textColor="@color/text"
            android:textSize="24sp"/>

        <ImageView
            android:id="@+id/edit_recipe"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:tint="@color/text"
            tools:ignore="UseAppTint" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:id="@+id/recipe_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/active"
                    android:src="@drawable/ic_baseline_restaurant_menu_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/noFav"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="1.5dp"
                    android:layout_margin="1.5dp"
                    android:src="@drawable/ic_baseline_star_border_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:tint="@color/colorAccent"
                    tools:ignore="UseAppTint" />
                <ImageView
                    android:id="@+id/Fav"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="1.5dp"
                    android:layout_margin="1.5dp"
                    android:src="@drawable/ic_baseline_star_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:tint="@color/colorAccent"
                    tools:ignore="UseAppTint" />

                <!--

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="From: Author"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/inactive"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                -->

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/ingredient_header"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="Ingredients"
                    android:textColor="@color/text"
                    android:textSize="22sp"/>

                <ImageView
                    android:id="@+id/expand_ingredients"
                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:tint="@color/text"
                    tools:ignore="UseAppTint" />

            </LinearLayout>

            <com.jrk.mood4food.components.StretchingListView
                android:id="@+id/ingredient_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/materials_header"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="Materials"
                    android:textColor="@color/text"
                    android:textSize="22sp"/>

                <ImageView
                    android:id="@+id/expand_materials"
                    android:src="@drawable/ic_baseline_navigate_next_24"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:tint="@color/text"
                    tools:ignore="UseAppTint" />

            </LinearLayout>

            <com.jrk.mood4food.components.StretchingListView
                android:id="@+id/materials_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/description_header"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="Description"
                    android:textColor="@color/text"
                    android:textSize="22sp"/>

                <ImageView
                    android:id="@+id/expand_description"
                    android:src="@drawable/ic_baseline_navigate_next_24"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:tint="@color/text"
                    tools:ignore="UseAppTint" />

            </LinearLayout>

            <TextView
                android:id="@+id/description_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="No Discription found"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:visibility="gone"/>

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/comp_nav_bar"/>

</LinearLayout>